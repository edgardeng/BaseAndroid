<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@mipmap/ic_earth"/>

    <ImageView
        android:id="@+id/image_ariplane"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/image_bg"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="40dp"
        android:src="@mipmap/ic_ariplane"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_alignParentBottom="true" >
    <Button
        android:id="@+id/button_move_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="左移动10像素"
        android:textColor="#ffffff"
        android:background="@drawable/bg_button_red"/>

    <Button
        android:id="@+id/button_move_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="右移动10像素"
        android:textColor="#ffffff"
        android:background="@drawable/bg_button_red"/>

    <Button
        android:id="@+id/button_move_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="上移动10像素"
        android:textColor="#ffffff"
        android:background="@drawable/bg_button_red"/>

    <Button
        android:id="@+id/button_move_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="下移动10像素"
        android:textColor="#ffffff"
        android:background="@drawable/bg_button_red"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true">
        <Button
            android:id="@+id/button_rotate_anti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="逆时转1圈"
            android:textColor="#ffffff"
            android:background="@drawable/bg_button_red"/>

        <Button
            android:id="@+id/button_rotate_clock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="顺时转2圈"
            android:textColor="#ffffff"
            android:background="@drawable/bg_button_red"/>

        <Button
            android:id="@+id/button_alpha_anim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="明暗变化"
            android:textColor="#ffffff"
            android:background="@drawable/bg_button_red"/>

        <Button
            android:id="@+id/button_alpha_rotate_anim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="边转边暗"
            android:textColor="#ffffff"
            android:background="@drawable/bg_button_red"/>

    </LinearLayout>





</RelativeLayout>
